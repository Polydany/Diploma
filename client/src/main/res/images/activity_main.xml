<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Верхняя фиолетовая полоса -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#800080" />

    <!-- Кнопка imagedop -->
    <Button
        android:id="@+id/imagedop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="imagedop" />

    <!-- Пространство между верхней кнопкой и рядом кнопок -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Ряд из трех кнопок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="image1" />

        <Button
            android:id="@+id/start_record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:text="@string/start_recording" />

        <Button
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="image3" />
    </LinearLayout>

    <!-- Пространство между рядом кнопок и нижней фиолетовой полосой -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Нижняя фиолетовая полоса -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#800080" />
</LinearLayout>
